# AttentionSync Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://attentionsync:changeme@localhost:5432/attentionsync
POSTGRES_DB=attentionsync
POSTGRES_USER=attentionsync
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_DEFAULT_BUCKETS=attentionsync
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# API Configuration
API_PORT=8000
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# AI Service API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# Web Frontend
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Monitoring (Optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Content Processing
MAX_CONTENT_LENGTH=1000000
SUMMARY_MAX_LENGTH=200
CLUSTER_MIN_SAMPLES=3